generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String  @unique
  netflixes Netflix[]
}

model Netflix {
  id        Int      @id @default(autoincrement())
  type      String
  title     String
  director  String  @db.Text
  cast      String  @db.Text
  country   String
  release_year String
  rating      String
  duration    String
  description String  @db.Text

  reviews Review[]
  starRating StarRating[]
  categories Category[]
}

model Review {
  id        Int      @id @default(autoincrement())
  content   String

  netflixId Int
  netflix   Netflix  @relation(fields: [netflixId], references: [id])
}

model StarRating {
  id        Int      @id @default(autoincrement())
  star    Int

  netflixId Int
  netflix   Netflix  @relation(fields: [netflixId], references: [id])
}
